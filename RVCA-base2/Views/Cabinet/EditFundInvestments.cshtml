@using RVCA_base2.Models;
@model FundInvestmentsListItem
@{
    Layout = null;
}

<form action="@ViewData["SubmitUrl"].ToString()" method="post">
    <div class="row">
        <div class="col-md-4">
            <b>Название компании</b>
        </div>
        <div class="col-md-4">
            <b>Название фонда</b>
        </div>
        <div class="col-md-4">
            <b>Год инвестиции</b>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="companyname" id="companyname" value="@Model.CompanyName" style="width:100%" />
        </div>
        <div class="col-md-4">
            <input type="text" name="fundname" id="fundname" value="@Model.FundName" style="width:100%" />
        </div>
        <div class="col-md-4">
            <input type="text" name="InvesmentYear" id="InvesmentYear" value="@Model.InvesmentYear" style="width:100%" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <b>Объем сделки</b>
        </div>
        <div class="col-md-4">
            <b>Отрасль</b>
        </div>
        <div class="col-md-4">
            <b>Страна</b>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="Volume" id="Volume" value="@Model.Volume" style="width:100%" />
        </div>
        <div class="col-md-4">
            <input type="text" name="Otrasl" id="Otrasl" value="@Model.Otrasl" style="width:100%" />
        </div>
        <div class="col-md-4">
            <input type="text" name="Country" id="Country"  value="@Model.Country" style="width:100%" />
        </div>
    </div>
    <br />
    <center>
        <input type="submit" value="Сохранить" class="btn btn-info"  onclick="testVersionReminder();" />
    </center>
</form>

<script>
    function testVersionReminder() {
        alert('Внесенные изменения в режиме Прототипа - не сохраняются!');
    }
</script>
