@using RVCA_base2.Models;
@model UkPartnerData
@{
    Layout = null;
}

<form action="@ViewData["SubmitUrl"].ToString()" method="post">
    <div class="row">
        <div class="col-md-6">
            <b>Название</b>
        </div>
        <div class="col-md-6">
            <b>Отрасль</b>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="text" name="Name" id="Name" value="@Model.Name" style="width:100%" />
        </div>
        <div class="col-md-6">
            <input type="text" name="Otrasl" id="Otrasl" value="@Model.Otrasl" style="width:100%" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <b>Расположение</b>
        </div>
        <div class="col-md-6">
            <b>Год основания</b>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="text" name="Place" id="Place" value="@Model.Place" style="width:100%" />
        </div>
        <div class="col-md-6">
            <input type="text" name="Year" id="Year" value="@Model.Year" style="width:100%" />
        </div>
    </div>
    <br />
    <center>
        <input type="submit" value="Сохранить" class="btn btn-info"  onclick="testVersionReminder();"/>
    </center>
</form>

<script>
    function testVersionReminder() {
        alert('Внесенные изменения в режиме Прототипа - не сохраняются!');
    }
</script>